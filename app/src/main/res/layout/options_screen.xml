<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay"
            xmlns:tools="http://schemas.android.com/tools"
            tools:showIn="@layout/song_player" tools:context=".MainActivity"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:id="@+id/generalText"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master Volume"
            android:id="@+id/masterVolumeText"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:padding="8dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/textView"
            android:padding="8dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:textAlignment="gravity"
            android:gravity="right" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/masterVolumeBar" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dark View"
        android:id="@+id/darkViewToggle"
        android:padding="8dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motion"
        android:id="@+id/motionText"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:layout_gravity="bottom" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shake for Random"
        android:id="@+id/shakeToggle"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just for Fun"
        android:id="@+id/otherText"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Allow Easter Eggs?"
        android:id="@+id/funSwitch"
        android:padding="8dp"
        android:checked="true" />

</LinearLayout>